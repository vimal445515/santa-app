<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Santa's Interactive Delivery Planner</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Mountains+of+Christmas:wght@400;700&family=Nunito:wght@400;700&display=swap"
        rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="snowflakes" aria-hidden="true">
        <div class="snowflake">❅</div>
        <div class="snowflake">❆</div>
        <div class="snowflake">❅</div>
        <div class="snowflake">❆</div>
        <div class="snowflake">❅</div>
        <div class="snowflake">❆</div>
        <div class="snowflake">❅</div>
        <div class="snowflake">❆</div>
        <div class="snowflake">❅</div>
        <div class="snowflake">❆</div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-danger glass-nav">
        <div class="container-fluid">
            <a class="navbar-brand font-christmas" href="#">
                <i class="fas fa-sleigh"></i> Santa's Delivery Planner
            </a>
            <div class="d-flex text-white align-items-center gap-3">
                <span id="santa-weather" class="badge bg-info text-dark d-none">
                    <i class="fas fa-cloud-sun"></i> <span id="santa-temp">--</span>°C
                </span>
                <span id="live-status" class="badge bg-success animate-pulse">
                    <i class="fas fa-satellite-dish"></i> Live Tracking
                </span>
            </div>
        </div>
    </nav>

    <main class="container-fluid p-0">
        <div class="row g-0 h-100 position-relative">
            <div class="col-12 map-container">
                <div id="map"></div>
            </div>
        </div>

        <!-- Gift Management Modal -->
        <div class="modal fade" id="giftModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content glass-modal text-white">
                    <div class="modal-header border-bottom-0">
                        <h5 class="modal-title font-christmas fs-2" id="homeAddress">Home Address</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div id="home-weather-display" class="alert alert-info py-2 mb-3 d-none">
                            <i class="fas fa-temperature-high"></i> <span id="hw-temp">--</span>°C
                            | <span id="hw-condition">Loading...</span>
                        </div>
                        <h6><i class="fas fa-gifts"></i> Current Gifts:</h6>
                        <ul id="giftList" class="list-group list-group-flush mb-3 rounded">
                            <!-- Gifts will be injected here -->
                        </ul>
                        <div class="input-group">
                            <input type="text" id="newGiftInput" class="form-control" placeholder="Add a new gift...">
                            <button class="btn btn-warning text-dark fw-bold" type="button" id="addGiftBtn">Add</button>
                        </div>
                    </div>
                    <div class="modal-footer border-top-0 d-flex justify-content-between">
                        <button type="button" class="btn btn-danger" id="deleteHomeBtn">Delete Home</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Home Modal -->
        <div class="modal fade" id="addHomeModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content glass-modal text-white">
                    <div class="modal-header border-bottom-0">
                        <h5 class="modal-title font-christmas fs-2">Add New Home</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>You clicked a location on the map. Add a home here?</p>
                        <div class="mb-3">
                            <label for="newHomeAddress" class="form-label">Address / Family Name</label>
                            <input type="text" class="form-control" id="newHomeAddress"
                                placeholder="e.g. 101 Marine Drive">
                        </div>
                    </div>
                    <div class="modal-footer border-top-0">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-success" id="saveHomeBtn">Save Home</button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <!-- Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
    <!-- Custom JS -->
    <script src="/js/map.js"></script>
</body>

</html>